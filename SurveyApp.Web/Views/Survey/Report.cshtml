@model SurveyApp.Queries.Dtos.SurveyReportDto

@{
    ViewData["Title"] = "Report";
}

<h1>گزارش نظر سنجی</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CoordinatorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoordinatorId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DefineDateTime)
        </dt>
        <dd class="col-sm-10 show-date">
            @Html.DisplayFor(model => model.DefineDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsOpen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsOpen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResponseCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResponseCount)
        </dd>
    </dl>

    <h4>سوالات</h4>
    <hr />
    <ul class="list-group">
        @foreach (var question in Model.QuestionResponseReports)
        {

            <li class="list-group-item question-title">  @Html.DisplayFor(model => question.QuestionTitle)</li>
            <li class="list-group-item">
                <table class="table">
                    <thead>
                        <tr>
                            <th>عنوان جواب</th>
                            <th>تعداد جوابدهی</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var selection in question.Responses)
                        {
                            <tr>
                                <td>@selection.Key</td>
                                <td>@selection.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </li>
        }
    </ul>
</div>

@section TopScripts{
    <link href="~/css/Survey/ShowDetails.css" rel="stylesheet" />
}
@section BottomScripts{
    <script src="https://unpkg.com/jalali-moment/dist/jalali-moment.browser.js"></script>
    <script src="~/js/Survey/ShowOpenSurveys.js"></script>
}
