@model SurveyApp.Application.Commands.ViewModels.QuestionViewModel

@{
    ViewData["Title"] = "AddQuestion";
}
<form asp-action="AddQuestion">
    <div class="row">
        <h1>اضافه کردن سوال</h1>
        <button type="submit" class="btn btn-primary" >ذخیره</button>
    </div>
 
    <hr />
    <div class="col-md-12">

        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    @Html.HiddenFor(p => p.SelectionsTitles)
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="col-md-8">
                <h3>جواب ها</h3>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-8">
                            <label class="control-label"></label>
                            <input class="form-control" placeholder="جواب جدید" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <br />
                            <button class="btn btn-success" type="button" id="add-button"> + </button>
                        </div>
                    </div>


                </div>

                <table class="table" id="SelectionsTable">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>


            </div>
        </div>





    </div>
</form>
@section BottomScripts{
    <script src="~/js/Survey/AddQuestion.js"></script>
}

